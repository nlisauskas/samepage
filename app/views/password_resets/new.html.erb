<div class="title-container">
<h1>Reset Password</h1>
</div>


<%= form_tag password_resets_path, :method => :post do %>
  <div class='field'>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div><br>
  <div class="field">
    <%= label_tag "landlord or Contractor?" %><br>
    <%= select_tag :category,  options_for_select(["Landlord", "Contractor"], "Landlord"), class: "form-control"%>
  </div><br>
    <div class='actions'>
    <%= submit_tag "Reset Password" %>
  </div><br>
<% end %>
