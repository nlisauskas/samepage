<p id="notice"><%= notice %></p>

<h1>Contractors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Maintenance request</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.first_name %></td>
        <td><%= contractor.last_name %></td>
        <td><%= contractor.company %></td>
        <td><%= contractor.email %></td>
        <td><%= contractor.password_digest %></td>
        <td><%= contractor.maintenance_request_id %></td>
        <td><%= contractor.phone %></td>
        <td><%= link_to 'Show', contractor %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

