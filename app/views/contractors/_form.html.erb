<%= form_with(model: contractor, local: true) do |form| %>
  <% if contractor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contractor.errors.count, "error") %> prohibited this contractor from being saved:</h2>

      <ul>
      <% contractor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, required: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, required: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :company %>
    <%= form.text_field :company, required: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :occupation %><br>
    <%= form.select :occupation, ['Landscaper', 'Plumber', 'HVAC', 'Electrician', 'Locksmith', 'Flooring Specialist', 'Window Expert', 'Pest Control', 'General Contractor', 'Painter', ], required: true, class: "form-control"%>
  </div><br>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, required: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, required: true, class: "form-control"%>
  </div><br>

  <div class="actions">
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
