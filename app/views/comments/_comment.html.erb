<li>
  <%= comment.body %><br>
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago by
<% if comment.user_id %>
<%= User.find_by_id(comment.user_id).first_name %> <%= User.find_by_id(comment.user_id).last_name %>
<% elsif comment.contractor_id %>
<%= Contractor.find_by_id(comment.contractor_id).company %>
<% end %>
  </small>

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>
